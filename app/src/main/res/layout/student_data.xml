<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    app:cardCornerRadius="40dp"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mytxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name: PRABODH MAYEKAR \nAge: 21\nReg. No. 11900868\nCourse: MCA \t Gender: M \nPhone: 7757803132\nE-mail: prabodhmayekar@gmail.com"
            android:textColor="#000000"
            android:padding="22dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:background="#ffffff"
            android:textSize="20sp"
            android:shadowColor="#ffffff"
            android:padding="20sp"
            android:textColor="#008f00"
            app:layout_constraintTop_toBottomOf="@id/mytxt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:background="#ffffff"
            android:textSize="20sp"
            android:shadowColor="#ffffff"
            android:textColor="#8f0000"
            android:padding="20sp"
            app:layout_constraintTop_toBottomOf="@id/mytxt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
